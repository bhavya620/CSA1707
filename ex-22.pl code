%-------------------------
% BIRDS DATABASE IN PROLOG
%-------------------------

% Facts: bird(Name, Type)
% Type can be 'can_fly' or 'cannot_fly'
bird(sparrow, can_fly).
bird(eagle, can_fly).
bird(penguin, cannot_fly).
bird(ostrich, cannot_fly).
bird(parrot, can_fly).
bird(kiwi, cannot_fly).

% Rule: check if a bird can fly
can_fly(Bird) :-
    bird(Bird, can_fly),
    write(Bird), write(' can fly.'), nl.

cannot_fly(Bird) :-
    bird(Bird, cannot_fly),
    write(Bird), write(' cannot fly.'), nl.

% Optional: general rule
fly_status(Bird) :-
    bird(Bird, can_fly), write(Bird), write(' can fly.'), nl;
    bird(Bird, cannot_fly), write(Bird), write(' cannot fly.'), nl.
