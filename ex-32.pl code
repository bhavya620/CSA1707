% Check if Pattern matches the beginning of String
prefix([], _).
prefix([X|Xs], [X|Ys]) :-
    prefix(Xs, Ys).

% Check if Pattern occurs anywhere in String
match(Pattern, String) :-
    prefix(Pattern, String).           % Pattern at beginning
match(Pattern, [_|Rest]) :-
    match(Pattern, Rest).              % Skip first char, try rest

% User-friendly predicate: works with words/atoms
pattern_match(PatternAtom, StringAtom) :-
    atom_chars(PatternAtom, Pattern),
    atom_chars(StringAtom, String),
    match(Pattern, String).
